/* pages/librarys/library.wxss */

/* Style for the entire page container */
.page-container {
  background-color: #f5f5f5;
  padding: 20px;
}

/* Style for the search container */
.search-container {
  background-color: #fff;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  margin-bottom: 5px;
}

/* Style for the search input */
.search-input {
  width: 100%;
  padding: 10px;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  background-color: #f0f0f0;
}

/* Style for the library list container */
.library-list {
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  padding: 10px;
}

/* Style for each library container */
.library-container {
  background-color: #ffffff;
  border: 1px solid #e5e5e5;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 20px;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
}

/* Style for the title */
.title {
  font-weight: bold;
  font-size: 18px;
  color: #333;
}

/* Style for the description */
.description {
  margin-top: 8px;
  font-size: 14px;
  color: #666;
}

/* Style for the ID */
.id {
  margin-top: 8px;
  font-size: 12px;
  color: #999;
}
